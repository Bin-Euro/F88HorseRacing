<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:text="DateTime"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHorseNumberBet"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="HorseNumberBet"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewDateTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHorseNumberWin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="HorseNumberWin"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewHorseNumberBet"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plusOrMinusTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="plusorminus"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewHorseNumberWin"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
